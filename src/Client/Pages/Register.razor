@page "/register"

<PageTitle>Register - VMS</PageTitle>

<div class="flex items-center justify-center min-h-[80vh]">
    <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Create Account</h2>

        @if (errors.Any())
        {
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
                @foreach (var error in errors)
                {
                    <p class="text-sm">@error</p>
                }
            </div>
        }

        <EditForm Model="registerRequest" OnValidSubmit="HandleRegister" FormName="register">
            <DataAnnotationsValidator />

            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                    <InputText @bind-Value="registerRequest.FirstName"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <ValidationMessage For="@(() => registerRequest.FirstName)" class="text-red-500 text-sm mt-1" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                    <InputText @bind-Value="registerRequest.LastName"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <ValidationMessage For="@(() => registerRequest.LastName)" class="text-red-500 text-sm mt-1" />
                </div>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <InputText @bind-Value="registerRequest.Email"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="you@example.com" />
                <ValidationMessage For="@(() => registerRequest.Email)" class="text-red-500 text-sm mt-1" />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <InputText @bind-Value="registerRequest.Password" type="password"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Min 8 characters" />
                <ValidationMessage For="@(() => registerRequest.Password)" class="text-red-500 text-sm mt-1" />
            </div>

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                <InputText @bind-Value="registerRequest.ConfirmPassword" type="password"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <ValidationMessage For="@(() => registerRequest.ConfirmPassword)" class="text-red-500 text-sm mt-1" />
            </div>

            <button type="submit" disabled="@isLoading"
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 disabled:opacity-50 font-medium">
                @(isLoading ? "Creating account..." : "Register")
            </button>
        </EditForm>

        <p class="text-center text-sm text-gray-600 mt-4">
            Already have an account? <a href="/login" class="text-blue-600 hover:underline">Sign In</a>
        </p>
    </div>
</div>

@code {
    [Inject] private IAuthClientService AuthService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private RegisterRequest registerRequest = new();
    private List<string> errors = [];
    private bool isLoading;

    private async Task HandleRegister()
    {
        isLoading = true;
        errors.Clear();

        var result = await AuthService.RegisterAsync(registerRequest);

        if (result.Succeeded)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            errors = result.Errors.ToList();
        }

        isLoading = false;
    }
}
