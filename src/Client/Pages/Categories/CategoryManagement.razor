@page "/categories"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Categories - VMS</PageTitle>

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">Categories</h1>
        <AuthorizeView Roles="Admin,Manager">
            <button @onclick="OpenCreateForm"
                    class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 font-medium text-sm">
                + Add Category
            </button>
        </AuthorizeView>
    </div>

    <div class="bg-white rounded-lg shadow">
        @if (isLoading)
        {
            <div class="p-8 text-center text-gray-500">Loading categories...</div>
        }
        else if (categories.Count > 0)
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Products</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var category in categories)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 font-medium text-gray-900">@category.Name</td>
                                <td class="px-6 py-4 text-gray-600 text-sm">@(category.Description ?? "â€”")</td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                                        @category.ProductCount
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <AuthorizeView Roles="Admin,Manager" Context="actionContext">
                                        <div class="flex gap-2">
                                            <button @onclick="() => OpenEditForm(category)"
                                                    class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                                Edit
                                            </button>
                                            <button @onclick="() => DeleteCategory(category)"
                                                    class="text-red-600 hover:text-red-800 text-sm font-medium">
                                                Delete
                                            </button>
                                        </div>
                                    </AuthorizeView>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-8 text-center text-gray-500">No categories found.</div>
        }
    </div>
</div>

@if (showForm)
{
    <div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-800">@(isEditing ? "Edit Category" : "Create Category")</h2>
            </div>

            <EditForm Model="formModel" OnValidSubmit="HandleSave" class="p-6 space-y-4">
                <DataAnnotationsValidator />

                @if (!string.IsNullOrEmpty(formError))
                {
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md text-sm">
                        @formError
                    </div>
                }

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                    <InputText @bind-Value="formModel.Name"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <ValidationMessage For="() => formModel.Name" class="text-red-500 text-xs mt-1" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <InputTextArea @bind-Value="formModel.Description" rows="3"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
                    <button type="button" @onclick="CloseForm"
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
                        Save
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Inject] private ICategoryService CategoryService { get; set; } = default!;

    private List<CategoryDto> categories = [];
    private bool isLoading = true;
    private bool showForm;
    private bool isEditing;
    private int editingId;
    private CreateCategoryRequest formModel = new();
    private string? formError;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        isLoading = true;
        categories = await CategoryService.GetCategoriesAsync();
        isLoading = false;
    }

    private void OpenCreateForm()
    {
        isEditing = false;
        editingId = 0;
        formModel = new CreateCategoryRequest();
        formError = null;
        showForm = true;
    }

    private void OpenEditForm(CategoryDto category)
    {
        isEditing = true;
        editingId = category.Id;
        formModel = new CreateCategoryRequest
        {
            Name = category.Name,
            Description = category.Description
        };
        formError = null;
        showForm = true;
    }

    private async Task HandleSave()
    {
        formError = null;

        if (isEditing)
        {
            var result = await CategoryService.UpdateCategoryAsync(editingId, formModel);
            if (result?.Success != true)
            {
                formError = result?.Message ?? "Failed to update category";
                return;
            }
        }
        else
        {
            var result = await CategoryService.CreateCategoryAsync(formModel);
            if (result?.Success != true)
            {
                formError = result?.Message ?? "Failed to create category";
                return;
            }
        }

        showForm = false;
        await LoadCategories();
    }

    private void CloseForm()
    {
        showForm = false;
        formError = null;
    }

    private async Task DeleteCategory(CategoryDto category)
    {
        var result = await CategoryService.DeleteCategoryAsync(category.Id);
        if (result?.Success != true)
        {
            formError = result?.Message ?? "Failed to delete category";
            return;
        }
        await LoadCategories();
    }
}
