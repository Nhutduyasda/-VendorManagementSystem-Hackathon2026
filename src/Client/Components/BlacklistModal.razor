<div class="fixed inset-0 z-50 flex items-center justify-center bg-black/50">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4">
        <div class="p-6 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-800">Blacklist Supplier</h2>
            <p class="text-sm text-gray-500 mt-1">
                Are you sure you want to blacklist <strong>@SupplierName</strong>?
            </p>
        </div>

        <div class="p-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Reason *</label>
            <textarea @bind="reason" rows="4" placeholder="Enter the reason for blacklisting..."
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 resize-none"></textarea>

            @if (!string.IsNullOrEmpty(error))
            {
                <p class="text-red-500 text-xs mt-1">@error</p>
            }
        </div>

        <div class="flex justify-end gap-3 p-6 border-t border-gray-200">
            <button @onclick="OnCancel"
                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
                Cancel
            </button>
            <button @onclick="HandleConfirm"
                    class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700">
                Confirm Blacklist
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string SupplierName { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private string reason = string.Empty;
    private string? error;

    private async Task HandleConfirm()
    {
        if (string.IsNullOrWhiteSpace(reason))
        {
            error = "Please enter a reason for blacklisting.";
            return;
        }

        await OnConfirm.InvokeAsync(reason);
    }
}
