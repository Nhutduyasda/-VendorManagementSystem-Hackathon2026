@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-100">
    @* Sidebar *@
    <aside class="w-64 bg-gray-900 text-white flex-shrink-0">
        <div class="p-4 text-xl font-bold border-b border-gray-700">
            VMS
        </div>
        <NavMenu />
    </aside>

    @* Main content *@
    <div class="flex-1 flex flex-col overflow-hidden">
        <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-3 flex items-center justify-between">
            <h1 class="text-lg font-semibold text-gray-800">Vendor Management System</h1>
            <AuthorizeView>
                <Authorized>
                    <span class="text-sm text-gray-600">Welcome, @context.User.Identity?.Name</span>
                </Authorized>
            </AuthorizeView>
        </header>

        <main class="flex-1 overflow-y-auto p-6">
            @Body
        </main>
    </div>
</div>
